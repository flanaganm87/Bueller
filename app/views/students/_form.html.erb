<h1 style = "color:red;"> Update Student </h1>
<br>

<%= form_for :student, url: student_path(@student), method: :patch do |f| %>

  <p>  
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :nickname %>
    <%= f.text_field :nickname %><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :gravatar %>
    <%= f.text_field :gravatar %>
   
  </p>

  <p>
    <%= f.submit "Edit student" %>
  </p>
<% end %>
<%= link_to 'Back', root_path %>  